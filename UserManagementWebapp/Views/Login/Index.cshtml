@model UserManagementWebapp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card pt-5 px-5 rounded-3">
        <h1 class="fw-bold fs-1 text-center mt-1 mb-5">Login</h1>

        <form asp-action="Index">
            <div class="form-floating mb-4">
                <input asp-for="Email" class="form-control" placeholder="">
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Password" class="form-control" placeholder="">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
        <p class="p-5 mb-0">
            Don't have an account? <a class="text-blue-50 fw-bold" asp-controller="Register" asp-action="Index">Sign Up</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
